<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - GroupProject</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    @if (!(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" &&
    (ViewContext.RouteData.Values["action"]?.ToString() == "Login" || ViewContext.RouteData.Values["action"]?.ToString() == "Register")))
    {
        <link href="~/css/site-darkblue.css" rel="stylesheet" />
    }
</head>
<body>
    @if (!(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" &&
    (ViewContext.RouteData.Values["action"]?.ToString() == "Login" || ViewContext.RouteData.Values["action"]?.ToString() == "Register")))
    {
        <header class="d-flex justify-content-between align-items-center px-4 py-2">
            <div class="d-flex gap-3">
                <div>
                    <a href="@Url.Action("Index", "Main")" class="btn btn-kupony">Available Services</a>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Coupons")" class="btn btn-kupony">Active Coupons</a>

                </div>
                <div>
                    <a href="@Url.Action("Index", "QR")" class="btn btn-kupony">Scan QR</a>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Wallet")" class="btn btn-kupony">Points Wallet</a>
                </div>
            </div>

            <div class="dropdown d-flex align-items-center gap-2">
                <div class="user-icon">@User.Identity.Name?.Substring(0, 1).ToUpper()</div>
                <a class="navbar-text dropdown-toggle" href="#" role="button" id="userMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    @User.Identity.Name
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuLink">
                    <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">Manage account</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form method="post" action="@Url.Action("Logout", "Account")" class="m-0">
                            <button type="submit" class="dropdown-item">Log Out</button>
                        </form>
                    </li>
                </ul>
            </div>
        </header>
    }

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
